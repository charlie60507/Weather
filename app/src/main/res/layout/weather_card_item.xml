<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.example.weather.WeatherData.Location" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/weather_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin"
        android:padding="@dimen/card_view_padding"
        app:cardBackgroundColor="@color/card_view_background"
        app:cardCornerRadius="@dimen/card_view_radius"
        app:cardElevation="@dimen/card_view_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="@dimen/card_view_weather_icon_size"
                android:layout_height="@dimen/card_view_weather_icon_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.locationName}"
                app:layout_constraintBottom_toBottomOf="@+id/weather_icon"
                app:layout_constraintLeft_toRightOf="@+id/weather_icon"
                app:layout_constraintTop_toTopOf="@+id/weather_icon" />

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.weatherElement[0].time[0].parameter.parameterName}"
                app:layout_constraintBottom_toBottomOf="@+id/location"
                app:layout_constraintLeft_toRightOf="@+id/location"
                app:layout_constraintTop_toTopOf="@+id/location" />

            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="@dimen/card_view_favorite_icon_size"
                android:layout_height="@dimen/card_view_favorite_icon_size"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/weather"
                app:layout_constraintLeft_toRightOf="@+id/weather"
                app:layout_constraintTop_toTopOf="@+id/weather" />

<!--            android:src="@drawable/favorite_selector"-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>